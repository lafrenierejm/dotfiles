            "complex_modifications": {
                "rules": [
                    {
                        "description": "Change spacebar to left_control. (Post spacebar if pressed alone)",
                        "manipulators": [
                            {
                                "conditions": [
                                    {
                                        "bundle_identifiers": [
                                            "^unity\\..*$"
                                        ],
                                        "type": "frontmost_application_unless"
                                    }
