set mbox = "+com.gmail.lafrenierejm/inbox" # Directory for saved messages
set postponed = "+com.gmail.lafrenierejm/draft" # Directory for drafts
set realname = "LaFreniere, Joseph" # Name for 'from' field
set record = "+com.gmail.lafrenierejm/sent" # Directory for sent messages
